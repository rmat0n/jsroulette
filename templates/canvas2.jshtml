			/** Shuffling an array. */
			var shuffle = function (a) {
                var j = 0, valI = "";
                var valJ = valI;
                var l = a.length - 1;
                while(l > -1) {
                    j = Math.floor(Math.random() * l);
                    valI = a[l]; valJ = a[j]; a[l] = valJ; a[j] = valI; l -= 1;
                }
                return a;
            }
			
